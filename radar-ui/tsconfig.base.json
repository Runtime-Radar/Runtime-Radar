{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "strictNullChecks": true,
        "importHelpers": true,
        "target": "ES2022",
        "module": "esnext",
        "lib": ["DOM", "ES2022"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@cs/api": ["libs/api/src/index.ts"],
            "@cs/core": ["libs/core/src/index.ts"],
            "@cs/domains/auth": ["libs/domains/auth/src/index.ts"],
            "@cs/domains/cluster": ["libs/domains/cluster/src/index.ts"],
            "@cs/domains/detector": ["libs/domains/detector/src/index.ts"],
            "@cs/domains/integration": ["libs/domains/integration/src/index.ts"],
            "@cs/domains/notification": ["libs/domains/notification/src/index.ts"],
            "@cs/domains/role": ["libs/domains/role/src/index.ts"],
            "@cs/domains/rule": ["libs/domains/rule/src/index.ts"],
            "@cs/domains/runtime": ["libs/domains/runtime/src/index.ts"],
            "@cs/domains/token": ["libs/domains/token/src/index.ts"],
            "@cs/domains/user": ["libs/domains/user/src/index.ts"],
            "@cs/features/cluster": ["libs/features/cluster/src/index.ts"],
            "@cs/features/error": ["libs/features/error/src/index.ts"],
            "@cs/features/forbidden": ["libs/features/forbidden/src/index.ts"],
            "@cs/features/integration": ["libs/features/integration/src/index.ts"],
            "@cs/features/rule": ["libs/features/rule/src/index.ts"],
            "@cs/features/runtime": ["libs/features/runtime/src/index.ts"],
            "@cs/features/sign-in": ["libs/features/sign-in/src/index.ts"],
            "@cs/features/switch": ["libs/features/switch/src/index.ts"],
            "@cs/features/token": ["libs/features/token/src/index.ts"],
            "@cs/features/user": ["libs/features/user/src/index.ts"],
            "@cs/i18n": ["libs/i18n/src/index.ts"],
            "@cs/shared": ["libs/shared/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
